      #quizIdDiv {
        float: left;
      }
      #outer .floattext {
        float: left;
      }
      #outer button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 1px 4px;
        margin-left: 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
      }
      /* Optional: Makes the sample page fill the window. */
